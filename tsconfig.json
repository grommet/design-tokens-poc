{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "target": "es6",
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true
  },
  "include": ["*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "*.test.*"
  ],
}
